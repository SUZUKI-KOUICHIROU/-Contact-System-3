<% provide(:title, "Top") %>
<div class="bg_test">
  <h1 class="top-title">学校連絡帳</h1>
  <!--div class="col-md-5 col-md-offset-3"-->  
  <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    <% if logged_in? %>
      <div class="login-disabled"><%= link_to "ログイン済です", login_path, disabled: true, class: "btn btn-lg btn-success disabled" %></div>   
    <% else %>  
      <div class="top-page">  
        <div class="top-text">  
          <div class="top-test">
            <div class="top-test2">
              <%= f.label :メールアドレス, class: "label-login" %>
              <%= f.email_field :email, class: 'form-control' %>
              <%= f.label :パスワード, class: "label-login" %>
              <%= f.password_field :password, class: 'form-control' %>
              <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
              <%= f.check_box :remember_me, id: "remember-me" %>
              <span class="box-1">ログイン情報を記憶する</span>
              <% end %>
              <%= f.submit "ログイン", class: "btn btn-success btn-login-home" %>   
              <%= link_to 'https://access.line.me/oauth2/v2.1/authorize?response_type=code&client_id=1657280915&redirect_uri=https://arcane-peak-28945.herokuapp.com/callback&state=User.new_token&scope=openid%20email', class: 'btn btn-image' do %>
              <% end %>         
            </div>
          </div>
        </div> 
      <% end %>
      </div>
    </div>
  <% end %>
</div>


