<% provide(:title, 'sboard-index') %>

<div class="admin-contact"><h1>学級だより一覧</h1></div>

<div class="btn-month"><%= link_to "前月", schoolclasses_board_index_user_path(date: @first_day.prev_month), class: "btn btn--orange btn--border-solid" %>
  <%= l(@first_day, format: :middle) %>
  <%= link_to "次月", schoolclasses_board_index_user_path(date: @first_day.next_month), class: "btn btn--orange btn--border-solid" %>
</div>

<div>
  <table class="table table-bordered table-condensed" id="table-board-index">  
    <thead>
      <tr>      
      <% @schoolclasses.each do |news| %>
    
        <% css_class = case $days_of_the_week[news.contact_date.wday]
          when '土'
          'text-primary'
          when '日'
          'text-danger'
          end %> 

        <td class="<%= css_class %>">
          <%= l(day.contact_date, format: :short) %>
          <%= "(""#{$days_of_the_week[day.contact_date.wday]})" %>
        </td>
        
        
        
        
        <th class="board-1<%= css_class %>">
          <%= l(news.contact_date, format: :short) %>
          <%= "(""#{$days_of_the_week[news.contact_date.wday]})" %>
        </th>
        <th class="board-2"><%= link_to "#{news.board_title}", schoolclasses_show_board_user_path %></th>
      <tr> 
    </thead> 
    <% end %>
  </table>
</div>
