<% provide(:title, 'Edit-3') %>
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-class-index">
  <div class="class-index"><h1>３年クラス一覧</h1></div> 
    <thead> 
      <tr>  
        <th>クラス</th>
        <th>担任</th>
        <th>担任への連絡</th>
      </tr>
    </thead>
  
    <tbody>
      <% @schoolclassese_3.zip(@teachers) do |schoolclass, teacher| %>
        <tr>    
          <td>
            <% if teacher.nil? %>
              <%= schoolclass.class_name %>
            <% else%>
              <%= link_to "#{schoolclass.class_name}", student_index_2_user_path(teacher) %>
            <% end %>
          </td>
          <td>
            <% unless teacher.nil? %>
              <%= link_to "#{teacher.name}", edit_teacher_user_path(teacher) %>
            <% end %>
          </td>
          <td>
            <% unless teacher.nil? %>
              <%= link_to "担任への連絡", schoolclasses_teacher_contact_index_user_path(teacher) %>
            <% end %>
          </td>
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>