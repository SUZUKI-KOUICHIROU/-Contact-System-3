<% provide(:title, 'All-Students') %>

<h1>生徒一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <!--%= will_paginate %-->
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :name %></th>
        <th class="center"><%= User.human_attribute_name :class_number %></th>
        
        <th></th>
      </tr>
    </thead>

    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.name, student_detail_user_path(student) %></td>
        <td class="center"><%= student.class_number %></td>
      </tr>
    <% end %>
  <!--%= will_paginate %-->
  </table>
</div>  