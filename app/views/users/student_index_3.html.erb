<% provide(:title, 'All-Students') %>

<div class="student-title"><h1><%= "#{@user.class_number}生徒一覧" %></h1></div>

<div>
  <!--%= will_paginate %-->
  <table class="table table-bordered table-condensed table-hover" id="table-class-index">      
    <thead> 
      <tr>
        <th>クラス</th>
        <th>名前</th>
        <th>保護者</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.class_number %></td>
          <td><%= link_to "#{student.name}", student_detail_user_path(student) %></td>
          <td><%= student.guardian_name %></td>
          <td>
            <% if current_user.admin? && !current_user?(student) %>
            <%= link_to "削除", student, method: :delete,
                data: { confirm: "削除してよろしいですか？" },
                class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
