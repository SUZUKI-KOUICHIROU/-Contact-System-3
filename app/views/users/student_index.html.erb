<% provide(:title, 'Student-Index') %>
<h1>生徒一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :student_number %></th>
        <th><%= User.human_attribute_name :name %></th>
        <th><%= User.human_attribute_name :guardian_name %></th>
        <th><%= Schoolclass.human_attribute_name :note %></th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.student_number %></td>
          <td><%= link_to "#{student.name}", student_detail_user_path(student) %></td>
          <td>保護者<td>
          <td>連絡帳</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>