<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label "生徒名", class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label "保護者名", class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :guardian_name, class: "form-control" %>

  <%= f.label :class_number, class: "label-#{yield(:class_text)}" %>
  <%= f.select :class_number, @class_list.pluck(:class_name), { include_blank: "クラスを選択", selected: 1 },
                              { class: "form-control", required: true } %>
 
  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>