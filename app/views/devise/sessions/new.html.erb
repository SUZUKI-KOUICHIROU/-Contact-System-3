<% provide(:title, "Top") %>

<div class="bg_test">

  <h1 class="top-title">学校連絡帳</h1>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="top-page">  
        <div class="top-text">  
          <div class="top-test">
            <div class="top-test2">
              <%= f.label :メールアドレス, class: "label-login" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
              
              <%= f.label :パスワード, class: "label-login" %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
              
              <% if devise_mapping.rememberable? %>
                <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
                <%= f.check_box :remember_me, id: "remember-me" %>
                <span class="box-1">ログイン情報を記憶</span>
              <% end %>
              
              <%= f.submit "ログイン", class: "btn btn-success btn-login-home" %>   
              
              <!--%= render "devise/shared/links" %-->
              <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
              

              <%= link_to "", omniauth_authorize_path(resource_name, provider), method: :post, class: 'btn btn-image' %>
                <% end %>
              <% end %>
              
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                　<%= link_to "パスワード再設定", new_user_password_path(resource_name) %>
              <% end %>
              
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
