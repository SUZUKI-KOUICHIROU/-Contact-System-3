<% provide(:title, "new-guardian") %>
<% provide(:class_text, 'user--edit') %>
<% provide(:button_text, '登録') %>

<div class="student-title-2"><h1>保護者登録</h1></div>

<div class ="student-register">
  <div class="row">
    <div class="col-md-6 col-md-offset-3"> 

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="teacher-edit-2">    
    
          <%= f.label :name, class: "label-#{yield(:class_text)}" %>
          <%= f.text_field :name, required: true, autofocus: true, autocomplete: "name", class: "form-control" %>
          
          <%= f.label :email, class: "label-#{yield(:class_text)}" %>
          <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-control" %>
  
          <%= f.label :address, class: "label-#{yield(:class_text)}" %>
          <%= f.text_field :address, required: true, autofocus: true, autocomplete: "address", class: "form-control" %>
          
          <%= f.label :telephone_number, class: "label-#{yield(:class_text)}" %>
          <%= f.text_field :telephone_number, required: true, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
      
          <%= f.label :password, class: "label-#{yield(:class_text)}" %>
          <%= f.password_field :password, required: true, autocomplete: "new-password", class: "form-control" %>
          
          <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
          <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-control" %>
  
          <%= f.submit yield(:button_text), class: "teacher-btn btn-success btn-lg btn-login btn-#{yield(:class_text)}" %>
        </div>
      <% end %>
          <%= render "devise/shared/links" %>
    </div>
  </div>
</div>